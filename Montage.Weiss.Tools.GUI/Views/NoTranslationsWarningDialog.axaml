<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Montage.Weiss.Tools.GUI.ViewModels.Dialogs;assembly=wsm-gui"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="150"
             x:Class="Montage.Weiss.Tools.GUI.Views.NoTranslationsWarningDialog"
             x:DataType="vm:NoTranslationsWarningViewModel" 
             >
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:NoTranslationsWarningViewModel />
  </Design.DataContext>

  <Design.DesignStyle>
    <Styles>
      <StyleInclude Source="avares://wsm-gui/Styles/Dark.axaml" />
    </Styles>
  </Design.DesignStyle>
  
  <Border Grid.ColumnSpan="3"
          Name="DialogToastBox"
          Classes="DialogBox" 
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          IsVisible="{Binding IsVisible}"
          >
    
    <StackPanel>
      <TextBlock Text="{Binding WarningText}"
                 TextWrapping="Wrap"
                 Margin="5,5,5,10" 
                 />
      <ItemsControl ItemsSource="{Binding TargetCards}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <VirtualizingStackPanel Orientation="Vertical"
                                    VerticalAlignment="Top"
                                            />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Margin="2,2,2,2"
                    CornerRadius="0"
                    BorderBrush="Gray" BorderThickness="0"
                    Padding="5,5,5,5"
                            >
              <Image  Source="{Binding Image^}"
                      ClipToBounds="false"
                      MaxWidth="100"
                      />
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
      <!--
      <TextBox Watermark="Translated Card Name"
               Text="{Binding CustomEnglishName}"
               MinWidth="400"
               />
      <TextBox Watermark="[AUTO] When this card is translated..." 
               Text="{Binding CustomTranslation}"
               MinWidth="400"
               TextWrapping="WrapWithOverflow"
               AcceptsReturn="True"
               />
      -->
      <UniformGrid HorizontalAlignment="Stretch"
                   Columns="2"
                   Rows="1"
                   >
        <Button MinWidth="200"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="CancelButton_Click"
                Grid.Column="1"
                >
          Cancel
        </Button>
        
        <Button MinWidth="200"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ContinueButton_Click"
                Grid.Column="2"
                >
          Continue
        </Button>
      </UniformGrid>
    </StackPanel>
  </Border>
</UserControl>
